    "@types/nodemailer": "^7.0.4",
    "better-auth": "^1.4.7",
    "bullmq": "^5.66.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.11.1",
    "hono-rate-limiter": "^0.4.2",
    "ioredis": "^5.8.2",
    "nodemailer": "^7.0.11",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "uuid": "^13.0.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^20.19.27",
    "@types/pg": "^8.16.0",
    "@types/uuid": "^11.0.0",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
